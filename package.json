{
    "name": "genies-hud-manager",
    "version": "1.0.0-dev",
    "main": "./dist/electron/main.js",
    "author": "Marlon Leoner <marlon.leoner@gmail.com>",
    "description": "Genies HUD Manager é uma ferramenta projetada para simplificar o gerenciamento de HUDs (Heads-Up Displays) no jogo Counter-Strike 2. O Genies permite aos jogadores personalizar facilmente a aparência e o layout dos elementos visuais do jogo, como mapas, contadores de saúde e munição, além de outras informações cruciais durante a partida.",
    "scripts": {
        "ng": "ng",
        "dev": "concurrently \"pnpm run dev:app\" \"pnpm run dev:front\"  \"electron .\"",
        "dev:api": "nodemon --watch ./src/api -e ts --exec \"ts-node --project tsconfig.api.json ./src/api/index.ts\"",
        "dev:app": "tsc --preserveWatchOutput -p tsconfig.api.json --watch",
        "dev:front": "ng build --watch --configuration development",
        "start": "ng serve",
        "build": "ng build"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^17.1.0",
        "@angular/common": "^17.1.0",
        "@angular/compiler": "^17.1.0",
        "@angular/core": "^17.1.0",
        "@angular/forms": "^17.1.0",
        "@angular/platform-browser": "^17.1.0",
        "@angular/platform-browser-dynamic": "^17.1.0",
        "@angular/router": "^17.1.0",
        "@paralleldrive/cuid2": "^2.2.2",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-async-errors": "^3.1.1",
        "reflect-metadata": "^0.2.1",
        "rxjs": "~7.8.0",
        "socket.io": "^4.7.4",
        "sqlite3": "^5.1.7",
        "tslib": "^2.3.0",
        "typeorm": "^0.3.20",
        "winston": "^3.12.0",
        "zod": "^3.22.4",
        "zone.js": "~0.14.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^17.1.0",
        "@angular/cli": "^17.1.0",
        "@angular/compiler-cli": "^17.1.0",
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jasmine": "~5.1.0",
        "@types/node": "^20.11.25",
        "autoprefixer": "^10.4.18",
        "concurrently": "^8.2.2",
        "electron": "^29.1.1",
        "jasmine-core": "~5.1.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "nodemon": "^3.1.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "ts-node": "^10.9.2",
        "tsc-watch": "^6.0.4",
        "typescript": "~5.3.2"
    }
}
